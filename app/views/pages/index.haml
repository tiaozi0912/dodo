.container
  - if current_user.nil?
    .well
      .page-header 
        %h1 
          Love like never be hurt
          %small Where is dodo?
      = render :partial => "sessions/new"

  - else
    .page-header.timer-container
      %h1 
        <span class="timer">0</span> Days 
        %small Where is dodo?
    .timeline-container
      - @posts.each do |po|
        .post-container.row-fluid
          .left.span4
            - if po.has_photo?
              = image_tag po.photo.url(:medium), :class => "image-rounded"
              .post-date.muted #{formatted_date(po.date)}
            - else 
              .post-date.muted.alone #{formatted_date(po.date)}
          .right.span8
            .muted #{po.date}
            %p #{po.body}
          .dot
          .divider
          

:javascript
  drawDivider();
  $('.timer').timer();
        