.container{:"ng-app" => "dodo"}
  .page-header
    %h1 
      20 Days 
      %small Where is dodo?
  .timeline-container
    .posts-container.rpw-fluid
      .left.span4{:"ng-repeat" => }
    


    - @posts.each do |po|
      .post-container.row-fluid
        .left.span4
          - if po.has_photo?
            = image_tag po.photo.url(:medium), :class => "image-rounded"
          .date.muted #{formatted_date(po.created_at)}
        .right.span8
          %p #{po.body}
        .dot
        .divider

= include_javascript_tag "angular.min"
= include_javascript_tag "angular-resource.min"
        